<h2><%= t('users.Index') %></h2>
<br>
<div class="btn_new">
  <%= link_to t('link.user.New'), new_admin_user_path, class: 'btn btn-primary' %>
</div>
<table class="table index">
  <tr class="text-center">
    <th class="text-center"><%= User.human_attribute_name(:name) %></th>
    <th class="text-center"><%= User.human_attribute_name(:email) %></th>
    <th class="text-center"><%= User.human_attribute_name(:admin) %></th>
    <th class="text-center"><%= t('users.task_count') %></th>
    <th class="text-center"><%= User.human_attribute_name(:created_at) %></th>
    <th class="text-center"><%= User.human_attribute_name(:updated_at) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <div class="table item">
    <% @users.each do |user| %>
      <tr class="task_row">
        <td class="text-center"><%= user.name %></td>
        <td class="text-center"><%= user.email %></td>
        <td class="text-center"><%= t("admin.#{user.admin}") %></td>
        <td class="text-center"><%= user.tasks.count %></td>
        <td class="text-center"><%= l user.created_at %></td>
        <td class="text-center"><%= l user.updated_at %></td>
        <td><%= link_to t('link.Show'), admin_user_path(user), class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to t('link.Edit'), edit_admin_user_path(user), class: 'btn btn-success btn-sm' %></td>
        <td><%= link_to t('link.Destroy'), admin_user_path(user), class: 'btn btn-danger btn-sm', method: :delete, data: {confirm: t('message.user.Are you sure?', user: user.name)} %></td>
      </tr>
    <% end %>
  </div>
  <%= page_entries_info @users %>
</table>
<div class="page">
  <%= paginate @users %>
</div>

<div class="form-horizontal" role="form">
  <h2><%= t('sessions.New Session') %></h2>
  <br>
  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
    <div class="form-group title row">
      <div class="col-xs-4 control-label">
        <%= f.label :email, t('sessions.email') %>
      </div>
      <div class="col-xs-4">
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group title row">
      <div class="col-xs-4 control-label">
        <%= f.label :password, t('sessions.password') %>
      </div>
      <div class="col-xs-4">
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>
    <br>
    <%= f.submit t('button.login'), class: 'btn btn-primary' %>
  <% end %>
  <br>
  <li><%= link_to t('link.user.not have an account'), new_user_path %></li>
</div>

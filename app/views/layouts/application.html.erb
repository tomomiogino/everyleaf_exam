<!DOCTYPE html>
<html>
  <head>
    <title>TaskleafApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">taskleaf</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">taskleaf</a>
        </div>
        <div id="gnavi" class="collapse navbar-collapse justify-content-end">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to t('link.New Task'), new_task_path %></li>
            <li><%= link_to t('link.Index'), tasks_path %></li>
          </ul>
        </div>
      </div>
    </nav>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
    <nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="container">
        <div class="navbar-footer">
          <p>taskleaf</p>
          <p>Â© 2020 T-ogino</p>
        </div>
      </div>
    </nav>
  </body>
</html>

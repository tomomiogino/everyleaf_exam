<h1>タスク一覧</h1>
<%= link_to 'タスク新規作成', new_task_path %>
<table class="table index">
  <tr>
    <th><%= Task.human_attribute_name(:title) %></th>
    <th><%= Task.human_attribute_name(:created_at) %></th>
    <th></th>
    <th></th>
  </tr>
  <div class="table item">
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task) %></td>
        <td><%= l task.created_at %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task_path(task), method: :delete, data: {confirm: "タスク『#{task.title}』を削除してよろしいですか？"} %></td>
      </tr>
    <% end %>
  </div>
</table>
